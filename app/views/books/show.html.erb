 <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

 <%= render 'list', book: @booknew, user: @user %>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
<table class="table table-hover table-inverse">
        <tr>
            <th><%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
                <% end %>
                </th>
            <th><%= link_to @book.title, book_path(@book.id) %></th>
            <th><%= @book.body %></th>
            <% if @book.user_id == current_user.id %>
            <th>
                <button type="button" class="btn btn-success">
                <%= link_to "Edit", edit_book_path(@book) %>
                </button>    
            </th>
            <th><% if @book.user == current_user %>
                <button type="button" class="btn btn-danger">
                <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </button>
                <% end %>
                <% end %>
                </th>
        </tr>
</table>
</div>
